<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="estate_property_offer_form_view" model="ir.ui.view">
            <field name="name">Property Offer Form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_property_offer_list_view" model="ir.ui.view">
            <field name="name">Property Offer List</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <list>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <button name="offer_accept" type="object" icon="fa-check" title="Accept"/>
                    <button name="offer_refuse" type="object" icon="fa-times" title="Refuse"/>
                    <field name="status"/>
                </list>
            </field>
        </record>

