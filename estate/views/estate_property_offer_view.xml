<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">Property Offer Form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_list_view" model="ir.ui.view">
        <field name="name">Property Offer List</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list decoration-success="status == 'accepted'" decoration-danger="status == 'refused'" editable="bottom">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="offer_accept" type="object" icon="fa-check" title="Accept" invisible="status"/>
                <button name="offer_refuse" type="object" icon="fa-times" title="Refuse" invisible="status"/>
                <field name="status" column_invisible="1"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offer Action</field>
        <field name="res_model">estate.property.offer</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>
</odoo>
