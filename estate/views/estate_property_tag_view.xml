<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="property_tag_form_view" model="ir.ui.view">
            <field name="name">Property Tag Form</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="property_tag_list_view" model="ir.ui.view">
            <field name="name">Property Tag List</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="property_tag_action" model="ir.actions.act_window">
            <field name="name">Property Tags</field>
            <field name="res_model">estate.property.tag</field>
        </record>

        <menuitem
                name="Property Tags"
                id="property_tag_menu_item"
                parent="settings_menu"
                action="property_tag_action"/>

    </data>
</odoo>